{
   "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.11/MicrosoftTeams.schema.json",
   "manifestVersion": "1.11",
    "version": "1.0.0",
    "id": "{new GUID for this Teams app - not the Azure AD App ID}",
    "packageName": "com.contoso.teamsauthsso",
    "developer": {
      "name": "Microsoft",
      "websiteUrl": "https://www.microsoft.com",
      "privacyUrl": "https://www.microsoft.com/privacy",
      "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
    },
    "name": {
      "short": "Tab Auth SSO",
      "full": "Tab Auth SSO"
    },
    "description": {
      "short": "Tab Auth SSO app",
      "full": "This sample shows sso authentication for tab."
    },
    "icons": {
      "outline": "outline.png",
      "color": "color.png"
    },
    "accentColor": "#60A18E",
    "staticTabs": [
      {
        "entityId": "auth",
        "name": "Auth",
        "contentUrl": "https://{ngrokSubdomain}.ngrok-free.app/ssoDemo",
        "scopes": [ "personal" ]
      }
    ],
    "configurableTabs": [
      {
        "configurationUrl": "https://{ngrokSubdomain}.ngrok-free.app/configure",
        "canUpdateConfiguration": true,
        "scopes": [
          "team"
        ]
      }
    ],
    "permissions": [ "identity", "messageTeamMembers" ],
    "validDomains": [
      "{ngrokSubdomain}.ngrok-free.app"
    ],
    "webApplicationInfo": {
      "id": "{appId}",
      "resource": "api://{ngrokSubdomain}.ngrok-free.app/{appId}"
    }
  }
  