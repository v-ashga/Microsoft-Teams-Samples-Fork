                },
                {
                  "title": "",
                  "value": ""
                },
                {
                  "title": "",
                  "value": ""
                },
                {
                  "title": "",
                  "value": ""
                },
                {
                  "title": "",
                  "value": ""
                },
                {
                  "title": "",
                  "value": ""
                }
              ]
            }
          ]
        }
      ]
    }

  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "card": {
        "version": 1.0,
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ]
}
