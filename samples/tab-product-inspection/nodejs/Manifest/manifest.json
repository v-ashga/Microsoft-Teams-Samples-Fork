{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.12/MicrosoftTeams.schema.json",
 "manifestVersion": "1.12",
  "version": "1.0.0",
  "id": "{{Microsoft-App-Id}}",
  "packageName": "com.teams.productinspection",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Product Inspection",
    "full": "Product Inspection sample"
  },
  "description": {
    "short": "Product Inspection",
    "full": "This app allows users to scan a product, capture a image and mark it as approved/rejected."
  },
  "accentColor": "#5558AF",
  "staticTabs": [
    {
        "entityId": "tabproductinspection",
        "name": "Product Inspection",
        "contentUrl": "https://{{domain-name}}/tab",
        "websiteUrl": "https://{{domain-name}}/tab",
        "scopes": [
            "personal"
        ]
    }
],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "devicePermissions": [
    "media"
  ],
  "validDomains": [
    "*.ngrok-free.app",
    "{{domain-name}}"
  ]
}
