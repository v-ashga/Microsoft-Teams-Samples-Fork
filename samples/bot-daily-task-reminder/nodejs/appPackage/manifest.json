{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.12/MicrosoftTeams.schema.json",
 "manifestVersion": "1.12",
  "version": "1.0.0",
  "id": "{{Microsoft-App-Id}}",
  "packageName": "com.microsoft.teams.aaptaskreminder",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "App task reminder",
    "full": "App task reminder"
  },
  "description": {
    "short": "App task reminder",
    "full": "This sample shows a feature where user can schedule a recurring task and get a reminder on the scheduled time."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "bots": [
    {
      "botId": "{{Microsoft-App-Id}}",
      "scopes": [
        "personal"
      ],
	  "commandLists": [
        {
          "scopes": [
            "personal"
          ],
          "commands": [
            {
              "title": "create-reminder",
              "description": "To create the reminder for a task"
            }
          ]
        }
      ],
      "isNotificationOnly": false
    }
  ],
  "permissions": [ "identity", "messageTeamMembers" ],
  "validDomains": [
    "{{domain-name}}"
  ]
}
