<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://res.cdn.office.net/teams-js/2.2.0/js/MicrosoftTeams.min.js"
        integrity="sha384-yBjE++eHeBPzIg+IKl9OHFqMbSdrzY2S/LW3qeitc5vqXewEYRWegByWzBN/chRh"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        microsoftTeams.app.initialize().then(() => {
            viewLocation();
        })
        // Method to show geo location for given latitude and longitude values.
        function viewLocation() {
            const params = window.location.search;
            let latitude = params.substring(params.search("=") + 1, params.search("&"));
            let longitude = params.substring(params.search("&") + 11);
            let location = { "latitude": latitude, "longitude": longitude };
            // Methos to ask for permission and then show current user location
            microsoftTeams.location.showLocation(location, (error, result) => {
                // If there's any error, an alert shows the error message/code
                if (error) {
                    if (error.message) {
                        alert(" ErrorCode: " + error.errorCode + error.message);
                    }
                    else {
                        alert(" ErrorCode: " + error.errorCode);
                    }
                    return;
                }
            });
        } 
    </script>
