{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Medium",
                  "weight": "Bolder",
                  "text": "Request details"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Medium",
                  "weight": "Bolder",
                  "text": "Pending"
                }
              ],
              "width": "auto"
            }
          ]
        }
      ],
      "bleed": true
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "FactSet",
                  "facts": [
                    {
                      "title": "**Request title:**",
                      "value": "${requestTitle}"
                    },
                    {
                      "title": "**Request description:**",
                      "value": "${requestDescription}"
                    },
                    {
                      "title": "**Created By:**",
                      "value": "${createdBy}"
                    },
                    {
                      "title": "**Assigned To:**",
                      "value": "${assignedToName}"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "verb": "approved",
          "title": "Approve",
          "data": {
            "CreatedBy": "${createdBy}",
            "RequestTitle": "${requestTitle}",
            "RequestDescription": "${requestDescription}",
            "AssignedTo": "${assignedTo}",
            "AssignedToName": "${assignedToName}",
            "UserMRI": "${userMRI}"
          }
        },
        {
          "type": "Action.Execute",
          "verb": "rejected",
          "title": "Reject",
          "data": {
            "CreatedBy": "${createdBy}",
            "RequestTitle": "${requestTitle}",
            "RequestDescription": "${requestDescription}",
            "AssignedTo": "${assignedTo}",
            "AssignedToName": "${assignedToName}",
            "UserMRI": "${userMRI}"
          }
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}