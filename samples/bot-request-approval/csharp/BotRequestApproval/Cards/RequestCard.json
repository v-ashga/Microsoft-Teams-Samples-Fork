{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Please fill the details for your request"
    },
    {
      "type": "Input.Text",
      "label": "Request title",
      "placeholder": "Request title",
      "id": "requestTitle"
    },
    {
      "type": "Input.Text",
      "label": "Request description",
      "placeholder": "request description",
      "id": "requestDescription"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Select manager"
    },
    {
      "type": "Input.ChoiceSet",
      "choices": [],
      "choices.data": {
        "type": "Data.Query",
        "dataset": "graph.microsoft.com/users?scope=currentContext"
      },
      "id": "AssignedTo",
      "isMultiSelect": false
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "verb": "requestCard",
          "title": "Submit",
          "data": {
            "CreatedBy": "${createdBy}",
            "AssignedTo": "${assignedTo}",
            "UserMRI": "${userMRI}",
            "RequestTitle": "${requestTitle}",
            "RequestDescription": "${requestDescription}"
          }
        }
      ]
    }
  ],
  "type": "AdaptiveCard",
  "version": "1.2"
}